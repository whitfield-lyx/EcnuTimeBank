<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.requirements.RequirementDetailActivity">

    <TextView
        android:id="@+id/requirement_name_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:maxLines="1"
        android:text="Name: Requirement 1"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/requirement_place_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/requirement_name_detail"
        android:layout_margin="10dp"
        android:maxLines="1"
        android:text="Place: School"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/requirement_time_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/requirement_place_detail"
        android:layout_margin="10dp"
        android:maxLines="1"
        android:text="Time: Tomorrow"
        android:textSize="24sp" />


    <TextView
        android:id="@+id/requirement_money_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/requirement_time_detail"
        android:layout_margin="10dp"
        android:maxLines="1"
        android:text="Money: 50"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/requirement_describe_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/requirement_money_detail"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Describe:"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/requirement_describe_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/requirement_describe_detail"
        android:text="aababababababasdfadfoasdofiajsdpoiajsdfpoiajsdfpoij"
        android:textSize="22sp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"/>

    <Button
        android:id="@+id/requirement_accept_btn"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="20dp"
        android:text="requirement accept"
        android:textColor="#ffffff"
        style="?android:attr/borderlessButtonStyle"
        android:background="@drawable/btn_accept"
        android:textSize="22sp"/>

</RelativeLayout>