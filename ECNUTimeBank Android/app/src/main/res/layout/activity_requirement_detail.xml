<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDetailBackground"
    tools:context=".ui.requirements.RequirementDetailActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/requirement_top_image"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingLeft="20dp"
                android:paddingBottom="10dp">
                <TextView
                    android:id="@+id/requirement_time_publish"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:maxLines="1"
                    android:text="6小时前发布"
                    android:textSize="15sp"
                    android:textColor="@color/colorSecondaryText"/>
                <TextView
                    android:id="@+id/requirement_name_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:maxLines="1"
                    android:text="Name: Requirement 1"
                    android:textSize="24sp"
                    android:textColor="@color/colorContentStatic"
                    android:layout_below="@id/requirement_time_publish"/>
                <TextView
                    android:id="@+id/requirement_money_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:maxLines="1"
                    android:text="时间券：5寸"
                    android:textSize="15sp"
                    android:textColor="@color/colorSecondaryText"
                    android:layout_below="@id/requirement_name_detail"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/requirement_profile_image"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/profile_img"
                    app:civ_border_width="2dp"
                    app:civ_border_color="@color/colorStroke"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="25dp"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp">
                    <View
                        android:id="@+id/line_time"
                        android:layout_width="390dp"
                        android:layout_height="1dp"
                        android:layout_alignParentRight="true"
                        android:background="@color/colorDetailLine" />
                    <View
                        android:id="@+id/line_time_1"
                        android:layout_width="355dp"
                        android:layout_height="1dp"
                        android:layout_alignParentRight="true"
                        android:background="@color/colorDetailLine"
                        android:layout_alignRight="@id/line_time"
                        android:layout_alignBottom="@id/line_time"/>
                    <TextView
                        android:id="@+id/requirement_time_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="时间"
                        android:textColor="@color/colorContentStatic"
                        android:textSize="24dp"
                        android:paddingBottom="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_alignLeft="@id/line_time_1"
                        android:layout_below="@id/line_time_1" />
                    <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/requirement_time_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_toLeftOf="@id/requirement_time_description"
                        android:paddingRight="10dp"
                        app:srcCompat="@drawable/ic_date_range_24dp" />
                    <TextView
                        android:id="@+id/requirement_time_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="2020年3月5日 10:00-12:00"
                        android:textSize="20sp"
                        android:textColor="@color/colorContentStatic"
                        android:layout_alignLeft="@id/requirement_time_description"
                        android:layout_below="@id/requirement_time_description"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp">
                    <View
                        android:id="@+id/line_place"
                        android:layout_width="355dp"
                        android:layout_height="1dp"
                        android:layout_alignParentRight="true"
                        android:background="@color/colorDetailLine" />
                    <TextView
                        android:id="@+id/requirement_location_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="地点"
                        android:textSize="24dp"
                        android:layout_marginTop="10dp"
                        android:paddingBottom="5dp"
                        android:maxLines="1"
                        android:textColor="@color/colorContentStatic"
                        android:layout_alignLeft="@id/line_place"
                        android:layout_below="@id/line_place" />
                    <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/requirement_location_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_below="@id/line_place"
                        android:layout_toLeftOf="@id/requirement_location_description"
                        android:paddingRight="10dp"
                        app:srcCompat="@drawable/ic_location_24px"/>
                    <TextView
                        android:id="@+id/requirement_place_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="华东师范大学一村"
                        android:textSize="20sp"
                        android:textColor="@color/colorContentStatic"
                        android:layout_alignLeft="@id/requirement_location_description"
                        android:layout_below="@id/requirement_location_description"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp">
                    <View
                        android:id="@+id/line_contact"
                        android:layout_width="355dp"
                        android:layout_height="1dp"
                        android:layout_alignParentRight="true"
                        android:background="@color/colorDetailLine" />
                    <TextView
                        android:id="@+id/requirement_contact_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="联系人"
                        android:layout_marginTop="10dp"
                        android:paddingBottom="5dp"
                        android:textColor="@color/colorContentStatic"
                        android:textSize="24dp"
                        android:maxLines="1"
                        android:layout_alignLeft="@id/line_contact" />

                    <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/requirement_contact_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:paddingRight="10dp"
                        app:srcCompat="@drawable/ic_contact"
                        android:layout_toLeftOf="@id/requirement_contact_description"/>

                    <TextView
                        android:id="@+id/requirement_contact_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="蔡教授 13812341234"
                        android:textSize="20sp"
                        android:textColor="@color/colorContentStatic"
                        android:layout_alignLeft="@id/requirement_contact_description"
                        android:layout_below="@id/requirement_contact_description"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="50dp">
                    <View
                        android:id="@+id/line_detail"
                        android:layout_width="355dp"
                        android:layout_height="1dp"
                        android:layout_alignParentRight="true"
                        android:background="@color/colorDetailLine" />
                    <TextView
                        android:id="@+id/requirement_describe_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="详情"
                        android:textSize="24dp"
                        android:maxLines="1"
                        android:textColor="@color/colorContentStatic"
                        android:layout_alignLeft="@id/line_detail"
                        android:layout_marginTop="10dp"/>
                    <TextView
                        android:id="@+id/requirement_describe_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="aababababababasdfadfoasdofiajsdpoiajsdfpoiajsdfpoij"
                        android:textSize="20sp"
                        android:textColor="@color/colorContentStatic"
                        android:layout_alignLeft="@id/line_detail"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_below="@+id/requirement_describe_detail"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/requirement_btn"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="20dp"
        android:text="@string/accept_requirement"
        android:textColor="#ffffff"
        style="?android:attr/borderlessButtonStyle"
        android:background="@drawable/btn_accept"
        android:elevation="3dp"
        android:textSize="22sp"/>
</RelativeLayout>