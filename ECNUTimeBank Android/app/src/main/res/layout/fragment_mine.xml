<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/border">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Me"
                android:gravity="center_horizontal"
                android:layout_gravity="center_vertical"
                android:textSize="25sp"
                android:layout_marginStart="50dp"
                android:id="@+id/me_textView"
                android:layout_marginLeft="50dp" />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/settings_icon"
                android:id="@+id/settings_imageView"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/profile"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:id="@+id/profile_imageView"
                android:layout_marginLeft="20dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NickName"
                android:layout_toEndOf="@id/profile_imageView"
                android:textSize="25sp"
                android:layout_marginTop="25dp"
                android:layout_marginStart="20dp"
                android:id="@+id/nickname_textView"
                android:layout_toRightOf="@id/profile_imageView"
                android:layout_marginLeft="20dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Account Number"
                android:layout_toEndOf="@id/profile_imageView"
                android:layout_marginStart="20dp"
                android:textSize="20sp"
                android:layout_marginTop="65dp"
                android:layout_marginBottom="20dp"
                android:id="@+id/accountNumber_textView"
                android:layout_toRightOf="@id/profile_imageView"
                android:layout_marginLeft="20dp" />
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/arrow_right"
                android:layout_marginTop="30dp"
                android:id="@+id/next_imageView"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:orientation="vertical"
            android:background="@drawable/gray_background">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="      My Bank"
                android:layout_marginTop="5dp"
                android:textSize="25sp"
                android:background="@drawable/white_background"
                android:id="@+id/myBank_textView"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:textSize="25sp"
                android:text="      Identity Authentication"
                android:background="@drawable/white_background"
                android:id="@+id/identityAuthentication_textView"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
